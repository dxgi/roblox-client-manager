// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "out": false, // set this to true to hide the "out" folder with the compiled JS files
        "dist": false // set this to true to hide the "dist" folder with the compiled JS files
    },
    "search.exclude": {
        "out": true,
        "dist": true
    },
    "typescript.tsc.autoDetect": "off",
    "roblox-client-manager": {
        "executable": {
            /*
                - automatic (default): Automatically select first available executable installation in current directory.
                - manual (recommended): Manually select the executable installation to use.
                - specific: Specify the path to the executable installation to use.
            */
            "mode": "automatic"
        },
        "instance": {
            /*
                - single: allow single instance to be used.
                - multi: allow multiple instances to be used.
            */
            "mode": "single",
            
            /*
                - limit: limit the number of instances to be used.
            */
            "limit": 1
        },
        "version": "latest"
    }
}